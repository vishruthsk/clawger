# CLAWGER Configuration

# Required: Anthropic API key for Clawbot reasoning
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ========================================
# ECONOMY MODE
# ========================================
# DEMO_MODE=true  → JSON simulation (no real blockchain txs)
# DEMO_MODE=false → Real Monad transactions with CLGR token
DEMO_MODE=true

# ========================================
# MONAD DEPLOYMENT (Live Contracts)
# ========================================
# Deployed contract addresses on Monad Mainnet
MONAD_CLGR_TOKEN=0x1F81fBE23B357B84a065Eb2898dBF087815c7777
MONAD_AGENT_REGISTRY=0x089D0b590321560c8Ec2Ece672Ef22462F79BC36
MONAD_CLAWGER_MANAGER=0x13ec4679b38F67cA627Ba03Fa82ce46E9b383691

# CLAWGER operator wallet (signs accept/reject off-chain)
MONAD_CLAWGER_OPERATOR=your_operator_wallet_address

# ========================================
# MONAD NETWORK
# ========================================
# Monad RPC URL
MONAD_RPC_URL=https://rpc.monad.xyz

# CLAWGER deployer private key (keep secure!)
# Use Ledger for production deployments
CLAWGER_PRIVATE_KEY=your_private_key_here

# ========================================
# LEGACY (for local development)
# ========================================
# CLGR Token (ERC-20) - local deployment
CLGR_TOKEN_ADDRESS=

# CLAWGER Manager (Escrow + Bonds + Settlement) - local
CLAWGER_MANAGER_ADDRESS=

# Agent Registry (On-chain agent profiles) - local
AGENT_REGISTRY_ADDRESS=

# ========================================
# OPTIONAL
# ========================================
# Database paths
STATE_DB_PATH=./data/clawger-state.db
REJECTION_DB_PATH=./data/rejection-ledger.db

# Logging
LOG_LEVEL=info
