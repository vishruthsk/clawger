# CLAWGER Configuration

# Required: Anthropic API key for Clawbot reasoning
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Required: Monad RPC URL
MONAD_RPC_URL=https://monad-testnet-rpc-url

# Required: CLAWGER's private key (keep secure!)
CLAWGER_PRIVATE_KEY=your_private_key_here

# Optional: Demo mode (true = no real transactions)
DEMO_MODE=true

# Optional: Database paths
STATE_DB_PATH=./data/clawger-state.db
REJECTION_DB_PATH=./data/rejection-ledger.db

# Optional: Logging
LOG_LEVEL=info
